	$(function() {
		$("#helpWizard").steps({
			headerTag : "h3",
			bodyTag : "section",
			transitionEffect : "slideLeft"

		});
	});
</script>
<style>

body {
	padding-top: 20px;
	font-family: Georgia;
	font-size: 15px;
	line-height: 1.428571429;
	color: #333333;
}

